function GrafExo(id){
     var ex=0; 
     var exocien;
     var exocincuenta;
     var exocero;
     var exotro;
     var total=0;
     var porcecien;
     var porcincuenta;
     var porcero;
     var porotro;
     var medida;
     try {
                    
                    var idcons=id;
                    var ind_form = $("#Frm_CharU").valid();
                        if(ind_form){
                              var parametros={
                                "id":idcons
                                }
                              $.ajax({
					type: "POST",
					dataType: "json",
					async: false,
					cache: false,
					url: "http://172.23.5.5/Simulacion/logica/ConsExo.php",
					data: parametros,
					success: function(response){                                           
						 if(JSON.parse(response.ind)){
                                                               ex=response.ind;
                                                               row2=response.row;

                                                } else {
                                                                ex=response.ind;
                                                                error=response.message;
                                                                query1=response.query1;
                                                }
					},
                                        error: function(xhr, textStatus, errorMessage) {
                                                                alert("¡Error (ajax)!"+ errorMessage + textStatus + xhr);
                                        }
				});
                                
                              
//                     alert(row);
                      }
        if(id==1){
            medida="Predios";
        }
        else{
             medida="";
        }
        for(var i=0; i<=row2.length-1; i++){
                    exocien=row2[i][0].toString()+" "+medida;
                    exocincuenta=row2[i][1].toString()+" "+medida;
                    exocero=row2[i][2].toString()+" "+medida;
                    exotro=row2[i][3].toString()+" "+medida;
                    total=row2[i][4];
               }
    } catch (e) {
        alert("error"+e);
    }
     
    if(id==3){
        document.getElementById('Spn_Exo100').innerHTML = "$"+number_format(exocien,2);
        document.getElementById('Spn_Exo50').innerHTML = "$"+number_format(exocincuenta,2);
        document.getElementById('Spn_Exo0').innerHTML = "$"+number_format(exocero,2);
        document.getElementById('Spn_Exot').innerHTML = "$"+number_format(exotro,2);  
    }
    else{
         document.getElementById('Spn_Exo100').innerHTML = exocien;
        document.getElementById('Spn_Exo50').innerHTML = exocincuenta;
        document.getElementById('Spn_Exo0').innerHTML = exocero;
        document.getElementById('Spn_Exot').innerHTML = exotro;
    }
   
    porcecien=(parseInt(exocien)*100)/total;
    porcincuenta=(parseInt(exocincuenta)*100)/total;
    porcero=(parseInt(exocero)*100)/total;
    porotro=(parseInt(exotro)*100)/total;
    $('#Pgb_exo100').width(porcecien.toString()+'%');
    $('#Pgb_exo50').width(porcincuenta.toString()+'%');
    $('#Pgb_exo0').width(porcero.toString()+'%');
    $('#Pgb_exot').width(porotro.toString()+'%');
    
}